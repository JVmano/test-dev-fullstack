{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist/"
  },
  "include": ["src/**/*.ts", "src/assets/*.json"],
}